<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_item_root_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="clip_vertical"
    android:layout_weight="10"
    android:background="@drawable/background"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameOfTheExercise_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:gravity="center|left|center_vertical"
            android:maxWidth="200dp"
            android:overScrollMode="ifContentScrolls"
            android:text="Kapalabhati"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/durationOfTheExercise_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:fontFamily="sans-serif"
            android:gravity="center|right|center_vertical"
            android:text="10mins"
            android:textSize="15dp" />


    </LinearLayout>


    <ImageView
        android:id="@+id/slider_id"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:src="@drawable/ic_reorder_grey_500_24dp" />

</LinearLayout>
